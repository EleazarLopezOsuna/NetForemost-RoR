<%= render partial: "nav" %>
<div class="container-fluid d-flex justify-content-center mt-5 pt-5">
  <div class="card text-bg-dark mb-3" style="width: 70rem;">
    <div class="card-header text-center">
      <h3><%= @user.name %> - My notes</h3>
    </div>
    <div class="card-body card-container">
      <%= form_with(model: @note, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", placeholder: "Body", style: "height: 430px; resize: none" %>
        </div>
        <div class="form-group">
          <%= f.text_field :hashtags, class: "form-control", placeholder: "Hashtags (comma separated)", value: @note.hashtags.map {|hashtag| hashtag.name }.join(', ') %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-block btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>