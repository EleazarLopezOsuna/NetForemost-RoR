<div class="container text-center">
  <div class="row d-flex justify-content-center mt-5">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card py-3 px-2">
        <div class="tab-content" id="pills-tabContent">
          <%= form_with(model: @user, class: "myForm") do |form| %>
            <% @user.errors.full_messages.each do |error| %>
              <div>
                <%= error %>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.email_field :email, class: "form-control", placeholder: "Email"  %>
            </div>
            <div class="form-group">
              <%= form.text_field :name, class: "form-control", placeholder: "Name"  %>
            </div>
            <div class="form-group">
              <%= form.password_field :password, class: "form-control", placeholder: "Password"  %>
            </div>
            <div class="form-group">
              <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"  %>
            </div>
            <div class="form-group">
              <%= form.submit "Sign Up", class: "btn btn-block btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>